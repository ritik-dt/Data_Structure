import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc = new Scanner(System.in);
		int input = sc.nextInt();
		
		int output = 4 + 3 *(input - 1);

        System.out.println(output);
        
        sc.close();
	}
}
